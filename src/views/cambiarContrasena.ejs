<!DOCTYPE html>
<html>
  <head>
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="https://firebasestorage.googleapis.com/v0/b/osintagram-be0cd.appspot.com/o/favicon.ico?alt=media&token=808ec839-7b45-41b2-a15d-b2bc456e81bb"
    />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/taskScreen.css" media="screen" />
    <title>Iniciar sesión</title>
    <style>
      /* Estilos para la vista oscura */
      body {
        background-color: #1c1c1c;
        color: #fff;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        margin-right: 600px;
      }
      .container {
        margin-left: 500px;
      }
      form {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 80%;
        max-width: 400px;
      }
      input[type="text"],
      input[type="password"] {
        background-color: #404040;
        color: #fff;
        border: 2px solid #666;
        width: 100%;
        padding: 10px;
        margin-bottom: 20px;
        box-sizing: border-box;
        border-radius: 4px;
      }
      input[type="submit"] {
        background-color: #4caf50;
        color: #fff;
        border: none;
        padding: 10px 20px;
        cursor: pointer;
        border-radius: 4px;
      }
      h1 {
        margin-top: 0;
        margin-bottom: 50px;
      }
      button {
        /* display: block;
			margin: auto; */
        padding: 10px 20px;
        font-size: 20px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
      }
      button:hover {
        background-color: #0069d9;
      }
      .alert {
        position: relative;
        padding: 1em;
        border-radius: 4px;
        border: 1px solid #ff0707;
        background-color: #f8a6a6;
        color: #0f0b00;
        width: 350px;
      }

      .alert-icon {
        position: absolute;
        top: 0.5em;
        left: 0.5em;
        font-size: 1.5em;
        line-height: 1;
        color: #ff0707;
        margin-top: 30px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <form action="/user/cambiarContrasena" method="post">
        <h1 class="mt-3 mb-3 grupo"><strong>OSINTagram</strong></h1>
        <h1 style="color: white">Cambiar Contraseña</h1>
        <label for="nombreUsuario">Nombre de usuario:</label>
        <input type="text" id="nombreUsuario" name="nombreUsuario" required />
        <label for="anteriorContraseña">Anterior Contraseña:</label>
        <input
          type="password"
          id="anteriorContraseña"
          name="anteriorContraseña"
          required
        />
        <label for="nuevaContraseña">Nueva Contraseña:</label>
        <input
          type="password"
          id="nuevaContraseña"
          name="nuevaContraseña"
          required
        />
        <input type="submit" value="Cambiar Contraseña" />
      </form>
      <!-- <form action="/user/nologin" method="get">
        <button type="registrarse" class="btn btn-info">Anonimo</button>
      </form>
      <form action="/user/registrar" method="get">
        <button type="registrarse" class="btn btn-info">Registrate</button>
      </form> -->
      <% if (mensaje === 'Nombre de usuario o contraseña incorrectos') { %>
      <div class="alert alert-warning">
        <span class="alert-icon">&#9888;</span>
        <p><%= mensaje %></p>
      </div>
      <% } %>
    </div>
  </body>
  <script src="/js/userController.js"></script>
  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
</html>
