<html>
  <head>
    <title>Nueva Publicación</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <h1 class="mt-3 mb-3 grupo"><strong>OSINTagram</strong></h1>
  </head>
  <style>
    .grupo {
      text-align: center;
      color: white;
    }
    .botonVerde {
      background-color: greenyellow;
      color: #1c1c1c;
    }
    .botonRojo {
      background-color: red;
      color: #1c1c1c;
    }
  </style>
  <body style="background-color: #1c1c1c;">
    <div class="container mt-4">
      <h1 class="mb-4" style="color: white">Nueva Publicación</h1>
      <form action="/crear" method="post" enctype="multipart/form-data">
        <div class="form-group">
          <label for="titulo" style="color: white">Título:</label>
          <input type="text" id="titulo" name="titulo" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="direccion" style="color: white">Dirección:</label>
          <input type="text" id="direccion" name="direccion" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="descripcion" style="color: white">Descripción:</label>
          <textarea id="descripcion" name="descripcion" class="form-control" required></textarea>
        </div>
        <div class="form-group">
          <label for="imagen" style="color: white">Imagen:</label>
          <div class="custom-file">
            <input type="file" class="custom-file-input" id="imagen" name="imagen" >
            <label class="custom-file-label" for="imagen">Seleccionar imagen</label>
          </div>
        </div>
        <button type="submit" class="btn btn-primary botonVerde">Publicar</button>
        <button type="submit" class="btn btn-info botonRojo" onclick="window.history.back()">Volver</button>
      </form>
      <% if(m==1){ %>
        <div class="alert alert-danger mt-4" role="alert">
            <% for(var i=0; i<mensajes.length; i++){ %>
                <p><%= mensajes[i] %></p>
            <% } %>
        </div>
      <% } %>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
  </body>
</html>