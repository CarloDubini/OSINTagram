<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Publicaciones</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/taskScreen.css" media="screen">
    <link rel="stylesheet" href="/css/stars.css" media="screen">
    
</head>
<body>
    <div class="container">
        <h1 class="mt-3 mb-3"id="titulo-publicaciones">PUBLICACIONES</h1>
        <form action="/registrar">
          <button type="Resgistrarse" class="btn btn-info">Registrate</button>
        </form>
        <form action="/login">
          <button type="IniciarSesion" class="btn btn-info">Iniciar Sesion</button>
        </form>
        <form action="/search">
            <input type="text" placeholder="Buscar..." name="searchInput">
            <button type="submitBuscar" class="btn btn-info">BUSCAR</button>
        </form>
        <div class="row justify-content-center task-list">
            <% taskList.forEach(task => { %>
                <div class="col-md-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-8">
                                  <p class="task-name"><%= task.titulo %></p>
                                </div>
                                <div class="col-2">
                                  <form action="publicacion/<%=task.id %>">
                                    <button type="submit" class="btn btn-info">VER</button>
                                  </form> 
                                </div>
                                <div class="col-2">
                                  <div class="stars" data-rating="<%= Math.round(task.valoracion * 2) / 2 %>"></div>
                                </div>
                              </div>
                        </div>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
</body>
</html>