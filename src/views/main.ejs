<!DOCTYPE html>
<html lang="es">
  <head>
    <link
      rel="shortcut icon"
      type="image/x-icon"
      href="https://firebasestorage.googleapis.com/v0/b/osintagram-be0cd.appspot.com/o/favicon.ico?alt=media&token=808ec839-7b45-41b2-a15d-b2bc456e81bb"
    />
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title class="grupo">OSINTagram</title>
    <h1 class="mt-3 mb-3 grupo"><strong>OSINTagram</strong></h1>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/taskScreen.css" media="screen" />
    <link rel="stylesheet" href="/css/stars.css" media="screen" />
    <style>
      .navbar {
        display: flex;
        justify-content: space-between;
        align-items: center;
        background-color: #0d1117;
        padding: 20px;
      }

      .navbar form {
        margin-right: 10px;
      }

      .navbar button {
        background-color: #007bff;
        color: #0d1117;
        border: none;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s ease;
      }

      .navbar button:hover {
        background-color: #0062cc;
      }

      .navbar input {
        border: none;
        padding: 10px;
        margin-right: 10px;
        border-radius: 5px;
      }
      .busqueda {
        border: none;
        padding: 10px;
        margin-right: 10px;
        border-radius: 5px;
      }
    </style>
  </head>
  <body>
    <div class="container">
      <nav class="navbar">
        <form action="/user/registrar">
          <button type="registrarse" class="btn btn-info">Registrate</button>
        </form>
        <form action="/user/login">
          <button type="submitLogin" class="btn btn-info">
            Iniciar Sesion
          </button>
        </form>
        <form action="/crear">
          <button type="submitLogin" class="btn btn-info">
            Crear Publicacion
          </button>
        </form>
        <form action="/user/logout">
          <button type="submitLogin" class="btn btn-info">Cerrar Sesion</button>
        </form>
        <form action="/user/cambiarContrasena">
          <button type="submitcambiarContraseña" class="btn btn-info">
            Cambiar Contraseña
          </button>
        </form>
        <form action="/misPublicaciones">
          <button type="listarPublicaciones" class="btn btn-info">Ver tus publicaciones</button>
        </form>
      </nav>
      <div class="busqueda">
        <form action="/search">
          <input type="text" placeholder="Buscar..." name="searchInput" />
          <button type="submitBuscar" class="btn btn-info">BUSCAR</button>
        </form>
      </div>
      <div class="row justify-content-center task-list">
        <% if (!taskList || taskList.length === 0) { %>
          <div class="alert alert-warning">
              <p>No hay publicaciones</p>
          </div>
        <% } %>
        <% taskList.forEach(task => { %>
        <div class="col-md-6 mb-3">
          <div class="card">
            <div class="card-body">
              <div class="row">
                <div class="col-8">
                  <p class="task-name"><%= task.titulo %></p>
                </div>
                <div class="col-2">
                  <form action="publicacion/<%=task.id %>">
                    <button type="submit" class="btn btn-info">VER</button>
                  </form>
                </div>
                <div class="col-2">
                  <div
                    class="stars"
                    data-rating="<%= Math.round(task.valoracion) %>"
                  ></div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
    </div>
  </body>
</html>
