    <body>
        <h1><%= publicacion.datos.titulo %></h1>
        <img  src="<%= publicacion.datos.imagen %>">
        <h3><%= publicacion.datos.localizacion %></h3>
        <p><%= publicacion.datos.descripcion %></p>
        
    </body>
